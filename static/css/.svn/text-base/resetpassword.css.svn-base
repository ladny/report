.blue-header{
	position:relative;
	text-align: center;
	height:1.173333rem;
	line-height:1.173333rem;
	background: #0EA3F0;
	border-bottom: 1px solid #dedede;
	font-size:0.48rem;
	color: #ffffff;
}
.header-back-white:before, .header-back-white:after{
	position: absolute;
	top:0.333333rem;
	left:0.2rem;
	width: 0;
	height: 0;
	border:0.253333rem solid transparent;
	border-right:0.253333rem solid #ffffff;
	content: ' ';
}
.header-back-white:after{
	left:0.226667rem;
	border-right:0.253333rem solid #0EA3F0;
}
.white-header{
	position:relative;
	text-align: center;
	height:1.173333rem;
	line-height:1.173333rem;
	border-bottom: 1px solid #DEDEDE;
	background: #fff;
	font-size:0.48rem;
	color: #444444;
}
.header-back:before, .header-back:after{
	position: absolute;
	top:0.333333rem;
	left:0.2rem;
	width: 0;
	height: 0;
	border:0.253333rem solid transparent;
	border-right:0.253333rem solid #444444;
	content: ' ';
}
.header-back:after{
	left:0.226667rem;
	border-right:0.253333rem solid #ffffff;	
}
/****************重置密码*********************/
.reset-phone-box{
	padding:0.72rem 0 0.48rem;
	text-align: center;
	background: #f5f5f5;
}
.reset-phone-ul li{
	height:0.893333rem;
	line-height:0.893333rem;
	font-size:0.32rem;
	color:#444444;
	position: relative;
}
.reset-phone-img{
	display: inline-block;
	width: 0.293333rem;
	height: 0.733333rem;
	margin-right:0.266667rem;
	background:url(../imgs/login/mobile-gray.png) no-repeat center;
	background-size:0.293333rem;
}
.reset-phone-ul li span{
    vertical-align: top;
    color: #0ea3f0;
}
.reset-authcode{
	padding-left:0.453333rem;
	
	background: #ffffff;
	margin-bottom: 0.8rem;
}
.authcode-wrap li{
	height:1.173333rem;
	line-height: 1.173333rem;
	font-size: 0.346667rem;
	border-bottom: 1px solid #dedede;
	
}
.authcode-wrap li:last-child{
	padding-right:0.453333rem ;
}

.authcode-img{
	background:url(../imgs/login/mail-open-gray.png) no-repeat left center;
	background-size:0.426667rem;
}
.authcode-box{
	height:auto;
	display:-moz-box;
	display:-webkit-box;
	display:box;
	-moz-box-direction:normal;
	-webkit-box-direction:normal;
	box-direction:normal;
}
.authcode-box input{
	display: block;
	height: 1.146667rem;
	border: 0;
	font-size: 0.346667rem;
	vertical-align: top;
	border-right: 1px solid #dedede;
	line-height: 1.066667rem;
	-webkit-box-flex:2;
	-moz-box-flex:2;
	box-flex:2;
	margin-bottom: 0;
	padding: 0;
}

.authcode-box div{
	height: 1.146667rem;
	width: 2.6rem;
	text-align:center;
	color: #fc8800;
	font-size: 0.373333rem;
}
.authcode-box .passd-span{
	text-align: right;
}
.login{
	width:1.253333rem;
	height:1.173333rem;
	display:block;
}
.eye-close-black{
	background: url(../imgs/login/eye-close-black.png) no-repeat right center;
	background-size:0.426667rem;
}
.login-password-key{
	background:url(../imgs/login/yaoshi-gray.png) no-repeat left center;
	background-size:0.426667rem;
}
.authcode-box1 input{
	border: 0;
}

/****************change-password*********************/
.change-password{
	margin-bottom:0.8rem;
	
}
.change-password dl{
	border-bottom: 1px solid #DEDEDE;
}
.change-password dl dt{
	height: 1.04rem;
	line-height: 1.04rem;
	background: #f5f5f5;
	padding-left: 0.453333rem;
	font-size: 0.346667rem;
}
.change-password dl dd{
	padding-left: 0.453333rem;
	height:1.173333rem;
	background: #FFFFFF;
}
.change-password dl dd input{
	height:1.146667rem;
	line-height:1.146667rem;
	border: 0;
	padding: 0;
	margin-bottom: 0;
	font-size: 0.346667rem;
}
.change-password dl dd{
	position: relative;
}
.change-password dl dd span{
	display:block;
	width:1.146667rem;
	height:1.146667rem;
	position: absolute;
	right:0.453333rem ;
	background: red;
	top: 0;
	background: url(../imgs/login/login-del-black.png) no-repeat right center;
	background-size:0.453333rem ;
}






















